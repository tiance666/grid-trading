{
  "name": "grid-trading-system",
  "version": "1.0.0",
  "description": "基于 Binance API 的加密货币网格交易系统",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.gridtrading.app",
    "productName": "网格交易系统",
    "copyright": "Copyright © 2024",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": true,
      "verifyUpdateCodeSignature": false,
      "publisherName": "网格交易系统"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "网格交易系统",
      "license": "LICENSE",
      "allowElevation": true,
      "runAfterFinish": true,
      "installerLanguages": ["zh_CN"],
      "language": "2052",
      "include": "installer.nsh"
    },
    "asar": true,
    "extraResources": [
      {
        "from": "src",
        "to": "src",
        "filter": ["**/*"]
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiance666/grid-trading.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiance666/grid-trading/issues"
  },
  "homepage": "https://github.com/tiance666/grid-trading#readme",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  }
}
